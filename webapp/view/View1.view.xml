<mvc:View 
	controllerName="ovly.telas.controller.View1" 
	displayBlock="true" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:u="sap.ui.unified"
	xmlns="sap.m">
	
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="Cadastro" showNavButton="true">
					<content>
						<Input value="Fabio" description="Pagoti" />
						<RatingIndicator maxValue="10" value="5" />
						<Slider min="1" max="6" value="4" step="2" />
						<u:Currency value="100" currency="EUR" useSymbol="true" />
					</content>
					<footer>
						<OverflowToolbar >
							<content>
								
								<Button text="A" width="200px" />
								<Button text="B" width="300px" />
								<Button text="C" width="400px" />
								<ToggleButton text="Ativar" />
								
							</content>
						</OverflowToolbar>
					</footer>
				</Page>
			</pages>
		</App>
	</Shell>
	
	
</mvc:View>